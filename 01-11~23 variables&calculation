01-15
import java.util.Scanner;

public class DifferentTypesOfInput {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        System.out.println("Give a string:");
        String value = scanner.nextLine();
        System.out.println("Give an integer:");
        int number = Integer.valueOf(scanner.nextLine());
        System.out.println("Give a double:");
        double floponum = Double.valueOf(scanner.nextLine());
        System.out.println("Give a boolean:");
        boolean blValue = Boolean.valueOf(scanner.nextLine());
        
        System.out.println("You gave the string " + value);
        System.out.println("You gave the integer " + number);
        System.out.println("You gave the double " + floponum);
        System.out.println("You gave the boolean " + blValue);// Write your program here

    }
}

